@model LibraryManagement.Models.Entity.TblUyeler

@{
    ViewBag.Title = "ÜyeGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<br />

<h2 style="text-align:center;">Üye Güncelleme Sayfası</h2>
<br />


@using (Html.BeginForm("ÜyeGüncelle", "Üye", FormMethod.Post))
{
    <div class="form-group">
        <br />
        <label>Üye Id</label>
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
        <br />
        <label>Üye Adı</label>
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Ad, "", new { @style = "color:red" })
        <br />
        <label>Üye Soyadı</label>
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Soyad, "", new { @style = "color:red" })
        <br />
        <label>Mail</label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Mail, "", new { @style = "color:red" })
        <br />
        <label>Telefon No</label>
        @Html.TextBoxFor(x => x.TelefonNo, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TelefonNo, "", new { @style = "color:red" })
        <br />
        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(x => x.KullanıcıAdı, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.KullanıcıAdı, "", new { @style = "color:red" })
        <br />
        <label>Şifre</label>
        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Sifre, "", new { @style = "color:red" })
        <br />
        <label>Okulu</label>
        @Html.TextBoxFor(x => x.Okul, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Okul, "", new { @style = "color:red" })
        <br />
        <label>Fotoğraf Linki</label>
        @Html.TextBoxFor(x => x.Fotoğraf, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Fotoğraf, "", new { @style = "color:red" })
    </div>
    <br />
    <button class="btn btn-warning">Güncelle</button>
}