
@model LibraryManagement.Models.Entity.TblUyeler

@{
    ViewBag.Title = "ÜyeEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<br />

<h2 style="text-align:center">Üye Ekle</h2>
<br />

