@using LibraryManagement.Models.Entity
@model List<TblHareket>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<br />
<h2 style="text-align:center;">İadesi Alınan Kitap Listesi</h2>
<br />


<table class="table table-striped">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarihi</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.TblKitap.Ad</td>
            <td>@item.TblUyeler.Ad&nbsp; @item.TblUyeler.Soyad</td>
            <td>@item.TblPersonel.Personel</td>
            <td>@item.AlışTarih.Value.ToShortDateString()</td>
            <td>@item.ÜyeGetirTarih.Value.ToShortDateString()</td>
            <td><a href="/Odunc/Oduncİade/@item.Id" class="btn btn-default" style="background-color:#b200ff;color:white">Detaylar</a></td>
        </tr>
    }
</table>