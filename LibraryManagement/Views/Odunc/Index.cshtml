@using LibraryManagement.Models.Entity
@model List<TblHareket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<h2 style="text-align:center;">Ödünç Kitap Listesi</h2>


<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>
    </tr>
    @foreach (var item in Model)
     {
        <tr>
            <td>@item.Id</td>
            <td>@item.TblKitap.Ad</td>
            <td>@item.TblUyeler.Ad&nbsp; @item.TblUyeler.Soyad</td>
            <td>@item.TblPersonel.Personel</td>
            <td>@item.AlışTarih.Value.ToShortDateString()</td>
            <td>@item.İadeTarih.Value.ToShortDateString()</td>
            <td><a href="/Odunc/Oduncİade/@item.Id" class="btn btn-default" style="background-color:#038d8d;color:white">Kitabı İade Et</a></td>
        </tr>
     }
</table>