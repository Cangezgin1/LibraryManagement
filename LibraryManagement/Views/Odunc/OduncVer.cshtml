@model LibraryManagement.Models.Entity.TblHareket

@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />


<h2 style="text-align:center;">Kitap Ekleme Sayfası</h2>
<br />

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:20px">
        <label>Üye ID</label>
        @Html.TextBoxFor(x => x.Üye, new { @class = "form-control" })
    </div>
    <div style="margin-top:20px">
        <label>Kitap ID</label>
        @Html.TextBoxFor(x => x.Kitap, new { @class = "form-control" })
    </div>
    <div style="margin-top:20px">
        <label>Personel ID</label>
        @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    </div>
    <div style="margin-top:20px">
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="AlışTarih" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:20px">
        <label>Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="İadeTarih" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>
    <button style="margin-top:20px;background-color:#a330b5;color:white;" class="btn btn-group">Kitap Ödünç Ver</button>
</form>